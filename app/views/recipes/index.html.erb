<h1>Searching Recipe for - <%= @search_term %></h1>

<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Name</th>
  	<th>Description</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= image_tag(recipe["image_url"])%></td>
      <td><%= recipe["title"] %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>